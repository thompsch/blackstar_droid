<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_controls">

    <fragment
        android:id="@+id/navigation_controls"
        android:name="com.ca13b.blackdroid.ui.ControlsFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_controls" />

    <fragment
        android:id="@+id/navigation_effects"
        android:name="com.ca13b.blackdroid.ui.EffectsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_effects" />

    <fragment
        android:id="@+id/navigation_presets"
        android:name="com.ca13b.blackdroid.ui.PresetsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_presets" />

    <fragment
        android:id="@+id/navigation_tuner"
        android:name="com.ca13b.blackdroid.ui.TunerFragment"
        android:label="Tuner"
        tools:layout="@layout/fragment_tuner" />
</navigation>
